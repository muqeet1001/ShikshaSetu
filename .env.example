# Hybrid Chatbot Configuration
# Copy this file to .env and fill in your API keys

# Cloud API Keys (for online mode)
EXPO_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here
EXPO_PUBLIC_HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Optional: Perplexity API for web-grounded responses
EXPO_PUBLIC_PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Feature Flags (true/false)
EXPO_PUBLIC_ENABLE_CLOUD_API=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_SPEECH_RECOGNITION=true
EXPO_PUBLIC_ENABLE_TELEPHONY=false
EXPO_PUBLIC_ENABLE_STREAMING=true
EXPO_PUBLIC_ENABLE_SOURCE_CITATION=true

# Performance Settings
EXPO_PUBLIC_MAX_RETRIES=3
EXPO_PUBLIC_TIMEOUT_MS=30000
EXPO_PUBLIC_CACHE_ENABLED=true
EXPO_PUBLIC_MAX_CACHE_SIZE=100

# Telephony Settings (for IVR/USSD)
EXPO_PUBLIC_IVR_ENDPOINT=https://your-ivr-service.com/webhook
EXPO_PUBLIC_USSD_CODE=*123*456#

# Model Paths (for offline mode)
EXPO_PUBLIC_OFFLINE_MODEL_PATH=models/llama-2-7b-chat.q4_0.gguf
EXPO_PUBLIC_VOSK_MODEL_PATH=models/vosk-model-small-hi-in-0.22